<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE730"
    tools:context=".Tela2"
    >


    <TextView
        android:id="@+id/titulo2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Usuario 2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mensagem2"
        android:layout_width="383dp"
        android:layout_height="24dp"
        android:text="Menssagem2"
        android:textAlignment="viewEnd"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/titulo2" />

    <EditText
        android:id="@+id/entradaTexto2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btSend2"
        />
    <Button
        android:id="@+id/btSend2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#82EF86"
        android:text="SEND"
        />

</androidx.constraintlayout.widget.ConstraintLayout>